@{
    ViewData["Title"] = ViewData["Title"] ?? "UI Kit";
    // Treat this as an app page so SPA starfield/card machinery is not loaded
    ViewData["CanPinchToZoom"] = true;
}

<section style="min-height: 100vh; padding: 6rem 1.25rem 3rem 1.25rem; max-width: 960px; margin: 0 auto;">
    <header style="margin-bottom: 2rem;">
        <h1 style="margin: 0 0 0.5rem 0; font-size: clamp(1.75rem, 3vw, 2.4rem); color: rgba(255,255,255,0.96);">
            Internal UI Kit
        </h1>
        <p style="margin: 0; color: rgba(255,255,255,0.7); max-width: 60ch; line-height: 1.6;">
            Sandbox for custom UI components -- internal-only
        </p>
    </header>

    <div class="ui-kit-grid">
        <section class="ui-kit-card">
            <h2 class="ui-kit-card-title">Dialogs</h2>
            <p class="ui-kit-card-subtitle">
                Glass-surface modal dialogs built on the shared SVG/frosted glass engine.
            </p>

            <div class="ui-kit-row">
                <button type="button" class="ui-kit-button" data-dialog-demo="alert">
                    Show alert
                </button>
                <button type="button" class="ui-kit-button" data-dialog-demo="confirm">
                    Show confirm
                </button>
                <button type="button" class="ui-kit-button" data-dialog-demo="prompt">
                    Show prompt
                </button>
            </div>

            <div class="ui-kit-status">
                <div>
                    <strong>Confirm:</strong>
                    <span data-dialog-demo-status="confirm">Last action: (none)</span>
                </div>
                <div>
                    <strong>Prompt:</strong>
                    <span data-dialog-demo-status="prompt">Last value: (none)</span>
                </div>
            </div>
        </section>

        <section class="ui-kit-card">
            <h2 class="ui-kit-card-title">Toggle switch</h2>
            <p class="ui-kit-card-subtitle">
                CSS-only toggle component used by app modules (e.g., ImageHexEditor).
            </p>

            <label class="comp-toggle">
                <input type="checkbox" class="comp-toggle-input" checked />
                <span class="comp-toggle-track" aria-hidden="true">
                    <span class="comp-toggle-thumb"></span>
                </span>
                <span>Example toggle switch</span>
            </label>
        </section>

        <section class="ui-kit-card">
            <h2 class="ui-kit-card-title">Glass surface sample</h2>
            <p class="ui-kit-card-subtitle">
                Static glass surface showing how content sits inside the shared component.
            </p>

            <div class="ui-kit-glass-demo glass-surface glass-surface--fallback">
                <div class="glass-surface__content">
                    <span class="ui-kit-glass-label">Glass surface preview</span>
                </div>
            </div>
        </section>
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="~/css/components/dialogs.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components/toggleSwitch.css" asp-append-version="true" />
    <style>
        body {
            font-family: ui-monospace, SFMono-Regular, "SF Mono", monospace;
        }
        
        .ui-kit-grid {
            display: grid;
            grid-template-columns: minmax(0, 1fr);
            gap: 1.5rem;
        }

        @@media (min-width: 900px) {
            .ui-kit-grid {
                grid-template-columns: repeat(2, minmax(0, 1fr));
            }

            .ui-kit-grid > .ui-kit-card:first-child {
                grid-column: span 2;
            }
        }

        .ui-kit-card {
            border-radius: 16px;
            border: 1px solid rgba(255, 255, 255, 0.14);
            @* background: radial-gradient(circle at top left, rgba(255, 255, 255, 0.06), rgba(0, 0, 0, 0.75)); *@
            padding: 1.4rem 1.6rem 1.5rem 1.6rem;
            box-shadow:
                0 12px 36px rgba(0, 0, 0, 0.65),
                inset 0 1px 0 rgba(255, 255, 255, 0.08);
        }

        .ui-kit-card-title {
            margin: 0 0 0.25rem 0;
            font-size: 1.1rem;
            color: rgba(255, 255, 255, 0.96);
        }

        .ui-kit-card-subtitle {
            margin: 0 0 1rem 0;
            font-size: 0.9rem;
            color: rgba(255, 255, 255, 0.72);
        }

        .ui-kit-row {
            display: flex;
            flex-wrap: wrap;
            gap: 0.6rem;
            margin-bottom: 0.9rem;
        }

        .ui-kit-button {
            border-radius: 999px;
            border: 1px solid rgba(255, 255, 255, 0.18);
            padding: 0.45rem 1rem;
            font-family: ui-monospace, SFMono-Regular, "SF Mono", monospace;
            font-size: 0.78rem;
            letter-spacing: 0.12em;
            text-transform: uppercase;
            background: rgba(0, 0, 0, 0.5);
            color: rgba(255, 255, 255, 0.9);
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.35rem;
            text-shadow: 0 1px 8px rgba(0, 0, 0, 0.4);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.55);
            transition:
                background 0.15s ease,
                transform 0.1s ease,
                box-shadow 0.15s ease;
        }

        .ui-kit-button:hover {
            background: rgba(0, 0, 0, 0.65);
            transform: translateY(-1px);
            box-shadow: 0 9px 26px rgba(0, 0, 0, 0.7);
        }

        .ui-kit-button:active {
            transform: translateY(0);
            box-shadow: 0 4px 14px rgba(0, 0, 0, 0.5);
        }

        .ui-kit-button:focus-visible {
            outline: 2px solid rgba(255, 255, 255, 0.9);
            outline-offset: 2px;
        }

        .ui-kit-status {
            font-size: 0.85rem;
            color: rgba(255, 255, 255, 0.7);
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }

        .ui-kit-status strong {
            font-weight: 600;
            margin-right: 0.25rem;
        }

        .ui-kit-glass-demo {
            margin-top: 0.5rem;
            max-width: 360px;
        }

        .ui-kit-glass-demo .glass-surface__content {
            padding: 0.75rem 1.1rem;
            justify-content: flex-start;
        }

        .ui-kit-glass-label {
            font-size: 0.9rem;
            color: rgba(255, 255, 255, 0.84);
        }
    </style>
}

@section Scripts {
    <environment include="Development">
        <script src="~/js/uiKit.js" type="module"></script>
    </environment>
    <environment exclude="Development">
        @inject Portfolio.Services.IAssetManifest AssetManifest
        <script src="@AssetManifest.GetAssetPath("uiKit.js")" type="module"></script>
    </environment>
}


