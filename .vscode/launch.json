{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net8.0/Portfolio.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:8081"
            }
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost (Cursor compat)",
            "url": "http://localhost:8081",
            "webRoot": "${workspaceFolder}/wwwroot",
            "runtimeArgs": [
                "--auto-open-devtools-for-tabs"
            ],
            "preLaunchTask": "dev:start",
            "postDebugTask": "dev:stop"
        }
    ]
}