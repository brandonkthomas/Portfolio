{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "App (Server)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dev:prelaunch",
            "program": "${workspaceFolder}/bin/Debug/net8.0/Portfolio.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:8081"
            }
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Chrome (DevTools)",
            "url": "http://localhost:8081",
            "webRoot": "${workspaceFolder}/wwwroot",
            "sourceMapPathOverrides": {
                "../../ts/*": "${workspaceFolder}/wwwroot/ts/*",
                "*/ts/*": "${workspaceFolder}/wwwroot/ts/*",
                "ts/*": "${workspaceFolder}/wwwroot/ts/*",
                "webpack:///./*": "${webRoot}/*",
                "webpack:///*": "${webRoot}/*",
                "http://localhost:8081/*": "${webRoot}/*"
            },
            "resolveSourceMapLocations": [
                "${workspaceFolder}/wwwroot/**",
                "!**/node_modules/**"
            ],
            "runtimeArgs": [
                "--auto-open-devtools-for-tabs"
            ],
            "smartStep": true,
            "trace": true,
            "preLaunchTask": "wait:app-ready"
        }
    ],
    "compounds": [
        {
            "name": "Launch App + Chrome (DevTools)",
            "configurations": [
                "App (Server)",
                "Chrome (DevTools)"
            ],
            "stopAll": true
        }
    ]
}
