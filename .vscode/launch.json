{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Portfolio/bin/Debug/net6.0/Portfolio.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Portfolio",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:5002",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "run"
        }
    ],
    "compounds": [
        {
            "name": "Launch .NET and Chrome",
            "configurations": [".NET Core Launch"]
        }
    ]
}