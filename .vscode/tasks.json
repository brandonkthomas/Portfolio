{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "command": "dotnet",
        "type": "process",
        "args": [
          "build",
          "${workspaceFolder}/Portfolio.csproj",
          "/property:GenerateFullPaths=true",
          "/consoleloggerparameters:NoSummary"
        ],
        "problemMatcher": "$msCompile"
      },
      {
        "label": "run",
        "type": "process",
        "command": "dotnet",
        "args": ["run", "--project", "Portfolio.csproj"],
        "isBackground": true,
        "problemMatcher": {
          "owner": "dotnet",
          "pattern": {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^.*Starting watch mode.*$",
            "endsPattern": "^.*Now listening on:.*$"
          }
        },
        "presentation": {
          "reveal": "always",
          "panel": "dedicated"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
}